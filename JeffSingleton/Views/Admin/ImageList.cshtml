@model List<JeffSingleton.Models.GalleryImage>

<ul id="images">
@foreach (var i in Model)
{
    <li>
        <h2>@i.Title</h2>
        <img src="@Url.Content(i.Filename)" />
        <span>@i.Info</span>
        <p>
            @Html.ActionLink("Up", "UpdateOrder", new {id = i.Id, up = true})
            @Html.ActionLink("Down", "UpdateOrder", new {id = i.Id, up = false})
			
			(@i.Order)
		</p>
        <p style="text-align:right;">
            @Html.ActionLink("Delete", "DeleteImage", new {id = i.Id})
        </p>
    </li>    
}
</ul>